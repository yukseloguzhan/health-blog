
@model HealthBlog.Entities.Concrete.About

@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url(../../FrontendFiles/main/images/blog.jpg);
    " data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/Default/AnaSayfa/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Kimiz <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread">Hakkımızda</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row d-flex no-gutters">
            <div class="col-md-6 d-flex">
                <div class="img img-video d-flex align-self-stretch align-items-center justify-content-center justify-content-md-center mb-4 mb-sm-0" style="background-image: url(../../FrontendFiles/AdminAbout/AboutImages/@Model.AboutImage);">
                </div>
            </div>
            <div class="col-md-6 pl-md-5 py-md-5">
                <div class="heading-section pl-md-4 pt-md-5">
                    <span class="subheading">Hoşgeldiniz</span>
                    <h2 class="mb-4">@Model.Title</h2>
                    <p>@{ HtmlString stringtoHtmlString = new HtmlString(@Model.Content);} @stringtoHtmlString</p>
                   
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-counter bg-light ftco-no-pt" id="section-counter">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <strong class="number" data-number="12">0</strong>
                    </div>
                    <div class="text">
                        <span>Yıllık Deneyim</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <strong class="number" data-number="45">0</strong>
                    </div>
                    <div class="text">
                        <span>Makale</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <strong class="number" data-number="20">0</strong>
                    </div>
                    <div class="text">
                        <span>Ödül</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                <div class="block-18 text-center">
                    <div class="text">
                        <strong class="number" data-number="50">0</strong>
                    </div>
                    <div class="text">
                        <span>Uzman Danışman</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

