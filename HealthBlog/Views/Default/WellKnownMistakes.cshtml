

@using HealthBlog.Entities.Concrete
@model List<Wrong>

<section class="ftco-section testimony-section bg-light">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section heading-section-white text-center ftco-animate">
                <span class="subheading">Kısa bilgiler</span>
                <h2>Doğru Bilinen Yanlışlar</h2>
            </div>
        </div>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="carousel-testimony owl-carousel ftco-owl">

                    @foreach (var x in Model)
                    {



                        <div class="item">
                            <div class="testimony-wrap py-4">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-quote-left"></span></div>
                                <div class="text">
                                    <p class="mb-4">@x.Description</p>
                                    <div class="d-flex align-items-center">
                                        <div class="user-img" style=" background-image: url(~/FrontendFiles/WriterImages/@x.Writer.WriterImage)"></div>
                                        <div class="pl-3">
                                            <p class="name">@x.Category.CategoryName</p>
                                            <span class="position">@x.CreatedDate</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section> <!--5.kısım happy client -->